<%= render "share/header" %>

  <div class="total-tips">
    <div class="total-tips-price">
      <span>支援総額:</span>
      <%= "#{@tips.sum(:price)}円" %>
    </div>
    <div class="total-tips-supportes">
    <span>支援者数:<span>
    <%= "#{@tips.count(:user_id)}名" %>
  </div>
  <div class="btns">
    <% if user_signed_in? %>
      <% if current_user.id == @novel.user_id %>
        <%= link_to "添削", "#", class: "edit-btn" %>
        <%= link_to "破棄", novel_path(@novel), method: :delete, class: "destroy-btn" %>
      <% else %>
        <%= link_to "投げる", novel_tips_path(@novel.id), method: :get, class: "tip-btn" %>
      <% end %>
    <% end %>
  </div>

  <div class="personal-novel">
    <h1 class="n-title">
      <%= @novel.title %>
    </h1>
    <div class="n-user-name">
      <%= "作者: #{@novel.user.nickname}" %>
    </div>

    <div class="n-content">
      <%= safe_join(@novel.content.split("\n"),tag(:br)) %>
    </div>
  </div>



