 <%= render "share/second-header" %>

  <%= form_with model: @user, url: user_registration_path, class:"registration-main", local: true do |f| %>
  <div class="form-wrap">
    <div class="form-header">
      <h1 class="form-header-text">
        新規登録
      </h1>
    </div>

    <%= render 'share/error_messages', model: f.object %>

    <div class="form-group">
      <%= f.text_area :nickname, class:"input-default", placeholder:"ユーザーネーム", maxlength:"10"%>
    </div>

    <div class="form-group">
      <%= f.email_field :email, class:"input-default", placeholder:"メールアドレス" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class:"input-default", placeholder:"パスワード(半角英字と数字の複合)"%>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, class:"input-default", placeholder:"パスワード(確認用)" %>
    </div>
    
    <div class="register-btn">
      <%= f.submit "登録", class:"register-red-btn" %>
    </div>
  </div>
  <% end %>

 <%= render "share/second-footer" %>